# Use neovim
alias vim="nvim"

# Linux specific aliases, work on both MacOS and Linux.
pbcopy() {
	stdin=$(</dev/stdin);
	pbcopy="$(which pbcopy)";
	if [[ -n "$pbcopy" ]]; then
		echo "$stdin" | "$pbcopy"
	else
		echo "$stdin" | xclip -selection clipboard
	fi
}
pbpaste() {
	pbpaste="$(which pbpaste)";
	if [[ -n "$pbpaste" ]]; then
		"$pbpaste"
	else
		xclip -selection clipboard
	fi
}

# Easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Always enable colored `grep` output
alias grep='grep --color=auto '

# OS X has no `md5sum`, so use `md5` as a fallback
command -v md5sum > /dev/null || alias md5sum="md5"

# copy file interactive
alias cp='cp -i'

# move file interactive
alias mv='mv -i'

# kubectl
alias k="kubectl"
alias tf="terraform"

# Azure subs
alias subprod="az account set --subscription e238329d-b62b-4551-8395-046f6fa66b28"
alias subtcs="az account set --subscription a5980719-95dc-405d-a853-a29e6946f1a6" 

boop () {
    local last="$?"
    if [[ "$last" == '0' ]]; then
        # Success sound and notification
        afplay /System/Library/Sounds/Glass.aiff &
    else
        # Failure sound and notification
        afplay /System/Library/Sounds/Basso.aiff &
    fi
    $(exit "$last")
}
